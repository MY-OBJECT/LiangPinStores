<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="4px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/old_phone"
            android:layout_width="408px"
            android:layout_height="match_parent"
            android:layout_marginEnd="4px"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:maxLines="1"
            android:numeric="integer"
            android:paddingStart="20px"
            android:textColor="@color/center_textColor"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setPhone_huoqu_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/blue"
            android:textSize="16.5sp" />
    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="4px">

        <TextView
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="输入验证码"
            android:textColor="@color/center_textColor"
            android:textSize="16.5sp" />

        <EditText
            android:id="@+id/old_phone_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4px"
            android:background="@color/white"
            android:cursorVisible="true"
            android:maxLines="1"
            android:numeric="integer"
            android:paddingStart="20px"
            android:textColor="@color/center_textColor"
            android:textCursorDrawable="@drawable/edit_cursor_color" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="4px">

        <TextView
            android:layout_width="234px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="输入新的手机号"
            android:textColor="@color/center_textColor"
            android:textSize="16.5sp" />

        <EditText
            android:id="@+id/out_old_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4px"
            android:background="@color/white"
            android:cursorVisible="true"
            android:numeric="integer"
            android:maxLines="1"
            android:paddingStart="20px"
            android:textColor="@color/center_textColor"
            android:textCursorDrawable="@drawable/edit_cursor_color" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="4px">

        <TextView
            android:layout_width="234px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="确认新的手机号"
            android:textColor="@color/center_textColor"
            android:textSize="16.5sp" />

        <EditText
            android:id="@+id/ok_out_old_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4px"
            android:background="@color/white"
            android:numeric="integer"
            android:cursorVisible="true"
            android:paddingStart="20px"
            android:textColor="@color/center_textColor"
            android:textCursorDrawable="@drawable/edit_cursor_color" />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
