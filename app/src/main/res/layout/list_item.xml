<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/app_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/head_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:background="@color/blue"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/name"
            android:layout_toEndOf="@+id/view"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="【生鲜市场】"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="交易成功"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginEnd="20px"
            android:drawableRight="@mipmap/mine_go"
            android:drawablePadding="5dp"
            android:textColor="@color/blue"
            android:layout_alignParentEnd="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.framework.lplibs.view.NestListView
        android:id="@+id/list1"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#dfdfdf"
        android:dividerHeight="0.1dp">
    </com.framework.lplibs.view.NestListView>

    <com.zhy.autolayout.AutoRelativeLayout
        android:paddingStart="20px"
        android:paddingEnd="20px"
        android:background="@color/white"
        android:layout_marginTop="4px"
        android:layout_marginBottom="4px"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="170px">

        <ImageView
            android:id="@+id/goods_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/auto"
            android:paddingStart="20px"
            android:layout_toEndOf="@+id/goods_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="樱桃"
                android:textColor="@color/center_textColor"
                android:textSize="16.5sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:layout_alignParentEnd="true"
                android:textSize="16.5sp"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:paddingEnd="20px"
            android:paddingStart="20px"
            android:layout_marginTop="18px"
            android:layout_below="@+id/auto"
            android:layout_toEndOf="@+id/goods_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:textColor="@color/gray"
                android:text="精致红心樱桃，富含维生素A,B,C,D"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×1"
                android:layout_alignParentEnd="true"
                android:textSize="20px"
                />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:paddingEnd="20px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="102px">

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件商品"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16px"
                android:layout_marginEnd="16px"
                android:text="合计：￥0.00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(含运费：0.00)"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/order_delete"
                />
            <ImageButton
                android:id="@+id/image2"
                android:layout_marginStart="20px"
                android:layout_marginEnd="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/order_pay"
                />
            <ImageButton
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/look_logistics"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
